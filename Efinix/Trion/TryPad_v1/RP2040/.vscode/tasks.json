{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Flash",
      "type": "shell",
      "command": "openocd",
      "args": [
        "-f",
        "interface/cmsis-dap.cfg",
        "-f",
        "target/rp2040.cfg",
        "-c",
        "adapter speed 5000; program {${command:cmake.launchTargetPath}} verify reset exit"
      ],
      "problemMatcher": []
    },

    // Build
    {
      "label": "Build Pico",
      "type": "cmake",
      "command": "build",
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    // RP2040 CP
    {
      "label": "Pico uf2 write",
      "type": "shell",
      "command": "cp ./build/RP2040.uf2 D:/",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
  ]
}
