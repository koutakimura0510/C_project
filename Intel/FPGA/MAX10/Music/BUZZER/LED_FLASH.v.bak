/**-------------------------------------------------
 * LEDデモ動作
 * -------------------------------------------------*/
module LED_FLASH(
    input [3:0] COUNT,
    output reg [9:0] LEDR
);


/**-------------------------------------------------
 * LED初期化
 * -------------------------------------------------*/
initial begin
    LEDR = 10'b1010101010;
end


/**-------------------------------------------------
 * LED動作回路
 * -------------------------------------------------*/
always @(COUNT) begin
    if (COUNT == 1'b1)
        LEDR <= ~LEDR;
end

endmodule